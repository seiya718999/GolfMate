<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-10 pt-5">
      <div class="card shadow" id="customer_<%= @customer.id %>">
        <div class="card-body">
          <div class="d-flex align-items-center mb-3">
            <%= image_tag @customer.get_profile_image(70, 70), class: "rounded-circle border" %>
            <h4 class="ml-3 mr-5">会員詳細</h4>
            <%= link_to "編集", edit_admin_customer_path(@customer.id), class: "btn btn-outline-info mr-2 mb-2 " %>
          </div>
          <table class="table pt-4">
            <tr>
              <td>
                お名前
              </td>
              <td>
                <%= @customer.last_name %>　<%= @customer.first_name %>
              </td>
            </tr>
            <tr>
              <td>
                メールアドレス
              </td>
              <td>
                <%= @customer.email %>
              </td>
            </tr>
            <tr>
              <td>
                プレースタイル
              </td>
              <td>
                <%= @customer.play_style_i18n %>
              </td>
            </tr>
            <tr class="border-0">
              <td class="border-0">
                平均スコア
              </td>
              <td class="border-0">
                <%= @customer.average_score %>
              </td>
            </tr>
            <tr class="border-0">
              <td class="border-0">
                都道府県
              </td>
              <td class="border-0">
                <%= @customer.address %>
              </td>
            </tr>
            <tr class="border-0">
              <td class="border-0">
                性別
              </td>
              <td class="border-0">
                <%= @customer.gender_i18n %>
              </td>
            </tr>
            <tr class="border-0">
              <td class="border-0">
                自己紹介
              </td>
              <td class="border-0">
                <%= @customer.introduction %>
              </td>
            </tr>
            <tr class="border-0">
              <td class="border-0">
                会員ステータス
              </td>
              <td class="border-0">
                <% if @customer.is_deleted %>
                  <span class="text-danger">退会</span>
                <% else %>
                  <span class="text-success">有効</span>
                <% end %>
              </td>
            </tr>
          </table>
        </div>
      </div>
      <div class="pt-4">
        <%= render "admin/homes/index", posts: @posts %>
      </div>
    </div>
  </div>
</div>