<div class="post-card card">
  <div class="card-body">
    <%= form_with model: post, local: true do |f| %>
      <div class="form-group">
        <%= f.label :body, "本文" %>
        <%= f.text_area :body, class: 'form-control', style: 'height: 200px; resize: none;' %>
      </div>
    
      <div class="form-group">
        <%= f.label :post_image, "画像" %>
        <%= f.file_field :post_image, accept: "image/*", class: 'form-control-file', id: 'post_image' %>
        <img id="image-preview" src="#" alt="Image Preview" style="display: none; width: 400px; height: auto; margin-top: 10px;">
      </div>
      
      <div class="form-group">
        <%= f.submit "投稿する", class:"btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>