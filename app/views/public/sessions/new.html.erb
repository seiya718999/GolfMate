<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow">
        <div class="card-header text-center">
          <h2>ログイン</h2>
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>

            <div class="form-group">
              <%= f.label :email, "メールアドレス", class: "control-label" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :password, "パスワード", class: "control-label" %>
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
            </div>

            <div class="form-group text-center">
              <%= f.submit "ログイン", class: "btn-square" %>
            </div>
          <% end %>

          <hr>

          <%= render "public/shared/links" %>
          <div class="text-center mt-3">
            <%= link_to "ゲストログイン（閲覧用）", customers_guest_sign_in_path, class: "btn btn-outline-secondary", method: :post %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>