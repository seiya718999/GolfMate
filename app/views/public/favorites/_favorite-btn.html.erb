<% if post.favorited_by?(current_customer) %>
  <%= link_to post_favorites_path(post), method: :delete, remote: true, class: 'favorite-btn text-danger' do %>
    ♥ <%= post.favorites.count %>　
  <% end %>
<% else %>
  <%= link_to post_favorites_path(post), method: :post, remote: true, class: 'favorite-btn text-danger' do %>
    ♡ <%= post.favorites.count %>　
  <% end %>
<% end %>
