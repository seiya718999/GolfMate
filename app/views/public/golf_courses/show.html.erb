<div class="container mt-5">
  <div class="row">
    <div class="col-md-12">
      <div class="golf-course-detail card">
        <div class="card-body">
          <h1 class="card-title"><%= @golf_course_detail["Item"]["golfCourseName"] %></h1>

          <div id="golfCourseCarousel" class="carousel slide mb-4" data-ride="carousel">
            <div class="carousel-inner">
              <% (1..5).each_with_index do |i, index| %>
                <div class="carousel-item <%= 'active' if index == 0 %>">
                  <img src="<%= @golf_course_detail["Item"]["golfCourseImageUrl#{i}"] %>" alt="Image <%= i %>" class="d-block carousel-image">
                </div>
              <% end %>
            </div>
            <a class="carousel-control-prev" href="#golfCourseCarousel" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#golfCourseCarousel" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>

          <p class="card-text"><strong>キャプション:</strong> <%= @golf_course_detail["Item"]["golfCourseCaption"] %></p>

          <h2 class="mt-4">基本情報</h2>
          <ul class="list-group list-group-flush mb-4">
            <!-- List other details similarly -->
            <li class="list-group-item"><strong>アクセス:</strong> <%= @golf_course_detail["Item"]["highway"] %> <%= @golf_course_detail["Item"]["ic"] %>から約<%= @golf_course_detail["Item"]["icDistance"] %></li>
          </ul>

          <h2 class="mt-4">詳細情報</h2>
          <pre class="card-text"><%= @golf_course_detail["Item"]["information"] %></pre>

          <h2 class="mt-4">利用者の評価</h2>
          <ul class="list-group list-group-flush mb-4">
            <!-- List evaluations similarly -->
            <li class="list-group-item"><strong>評価:</strong> <%= @golf_course_detail["Item"]["evaluation"] %> / 5.0</li>
          </ul>

          <div class="golf-course-links mt-4">
            <a href="<%= @golf_course_detail["Item"]["reserveCalUrl"] %>" class="btn btn-primary mr-2">予約する</a>
            <a href="<%= @golf_course_detail["Item"]["voiceUrl"] %>" class="btn btn-secondary mr-2">利用者の声</a>
            <a href="<%= @golf_course_detail["Item"]["layoutUrl"] %>" class="btn btn-info mr-2">コースレイアウト</a>
            <a href="<%= @golf_course_detail["Item"]["routeMapUrl"] %>" class="btn btn-warning">アクセスマップ</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>