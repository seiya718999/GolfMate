<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-7 pt-5">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h4><%= @group.name %></h4>
        <%= link_to "グループを編集する", edit_group_path(@group), class: "btn btn-success" %>
      </div>
      <p class="mb-5"><%= @group.introduction %></p>
      <table class="table">
        <% @customers.each do |customer| %>
          <tr>
            <td>
              <%= link_to customer_path(customer.id) do %>
                <%= image_tag customer.get_profile_image(80, 80) %>
                <%= customer.last_name %><%= customer.first_name %>
              <% end %>
              <%= link_to "メンバーを削除する", customer_group_customer_path(customer_id: customer.id, group_id: @group.id), method: :delete, data: { confirm: "本当にこのメンバーを削除しますか?" }, class: "btn btn-danger" %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>