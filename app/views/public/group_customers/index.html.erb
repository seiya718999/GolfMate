<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-7 pt-5">
      
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h4>メンバー追加</h4>
      </div>
      <div>
        <%= form_with url: group_customers_path(group_id: @group.id), method: :get, local: true do |f| %>
          <%= f.text_field :content, placeholder: "ユーザー検索" %>
          <%= f.submit '検索' %>
        <% end %>
      </div>
      
      <table class="table">
        <% @customers.each do |customer| %>
          <tr>
            <td>
              <%= link_to customer_path(customer.id) do %>
                <%= image_tag customer.get_profile_image(70, 70), class: "rounded-circle" %>
                <%= customer.last_name %><%= customer.first_name %>
              <% end %>
              <%= link_to "追加", group_customers_path(group_id: @group.id, id: customer.id), method: :post %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>